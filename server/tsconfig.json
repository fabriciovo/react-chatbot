{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": ".", 
      "paths": {
        "@controllers/*": ["src/controllers/*"],
        "@routes/*": ["src/routes/*"],
        "@utils/*": ["src/utils/*"],
        "@config/*": ["src/config/*"],

      },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }